{

    "name": "GPTEmail",
    "manifest_version": 2,
    "version": "1.0.0",
    "description": "GPTemail allows you to capture information from your email client, and sent it to a large language model (like OpenAI's GPT3) to suggest a reply for you. Works on multiple e-mail clients, and allows you to choose between Cohere and OpenAI as the provider for the language model. Detailed usage instructions here: https://github.com/andersonbcdefg/gptemail",
  
    "icons": {
      "48": "icons/48.png",
      "32": "icons/32.png"
    },

    "permissions": [
      "activeTab",
      "storage",
      "clipboardWrite"
    ],

    "browser_action": {
      "default_icon": "icons/32.png",
      "default_title": "GPTemail",
      "default_popup": "popup/draft_email.html"
    },
  
    "content_scripts": [
      {
        "matches": [
          "*://mail.google.com/*",
          "*://mail.yahoo.com/*",
          "*://outlook.live.com/*",
          "*://app.hey.com/*"
        ],
        "js": [
          "browser-polyfill.min.js",
          "gptemail.js"
        ]
      }
    ],

    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+E"
        },
        "description": "Send a 'toggle-feature' event"
      }
    }
  }
  